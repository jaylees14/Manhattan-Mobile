<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Logo">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">50sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/meckablecka_regular</item>
        <item name="android:textColor">@color/brandPrimaryDark</item>
    </style>


    <style name="H1">
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/brandPrimaryDark</item>
    </style>



    <style name="B1">
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/brandPrimaryDark</item>
    </style>

    <style name="B2">
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brandPrimaryDark</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="B2_White" parent="B2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="B2_White_Bold" parent="B2">
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
